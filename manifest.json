{
  "name": "FL Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "FL.RU Helper",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.fl.ru/*"],
      "js": ["assets/libs/jquery/jquery.min.js", "assets/js/main.js"]
    }
  ],
  "permissions": [
    "tabs",
    "*://*.fl.ru/*",
    "storage",
    "unlimitedStorage",
    "cookies",
    "notifications"
  ],
  "background": {
    "page": "src/bg/background.html",
    "persistent": false
  },
  "options_page": "src/options/options.html",
  "browser_action": {
    "default_icon": {
      "19": "assets/icons/icon19.png",
      "38": "assets/icons/icon38.png"
    }
  }
}